{
  "name": "expressful-pot",
  "version": "0.1.0",
  "description": "A simple API boilerplate build with express+mongoDB+JWT written in ES6.",
  "scripts": {
    "babel-node": "babel-node --presets es2015,stage-3",
    "serve": "nodemon --exec npm run babel-node src/app/app.js",
    "mkdir:storage-logs": "mkdirp ./dist/storage/logs",
    "build": "npm run mkdir:storage-logs; babel src -d dist",
    "seed:users": "npm run babel-node src/seeds/users.js",
    "start": "NODE_ENV=production node dist/app/app.js"
  },
  "author": "AlgusDark",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^0.8.7",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cors": "^2.7.1",
    "express": "^4.14.0",
    "helmet": "^2.1.1",
    "jsonwebtoken": "^7.1.3",
    "mongoose": "^4.5.4",
    "morgan": "^1.7.0",
    "nodemailer": "^2.5.0",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.10.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-3": "^6.11.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.9.2"
  }
}
